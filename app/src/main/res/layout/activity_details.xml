<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="entity"
            type="com.example.nit3213app.data.api.models.Entity" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.details.DetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{entity.name}"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Eiffel Tower"
                        android:layout_marginBottom="12dp"/>

                    <!-- Architect -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Architect"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{entity.architect}"
                        android:textSize="16sp"
                        tools:text="Gustave Eiffel"
                        android:layout_marginBottom="12dp"/>

                    <!-- Location -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{entity.location}"
                        android:textSize="16sp"
                        tools:text="Paris, France"
                        android:layout_marginBottom="12dp"/>

                    <!-- Year Completed -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Year Completed"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{Integer.toString(entity.yearCompleted)}'
                        android:textSize="16sp"
                        tools:text="1889"
                        android:layout_marginBottom="12dp"/>

                    <!-- Style -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Style"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{entity.style}"
                        android:textSize="16sp"
                        tools:text="Structural Expressionism"
                        android:layout_marginBottom="12dp"/>

                    <!-- Height -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Height (m)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{Integer.toString(entity.height)}'
                        android:textSize="16sp"
                        tools:text="324"
                        android:layout_marginBottom="12dp"/>

                    <!-- Description -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{entity.description}"
                        android:textSize="16sp"
                        tools:text="An iron lattice tower in Paris..." />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>